<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Questions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { user }) %> <!-- Include header.ejs và truyền biến user -->

    <div class="container mt-5">
        <h2 class="mb-4">Questions</h2>
        <a href="/questions/create" class="btn btn-primary mb-3">Create New Question</a>
        <div class="list-group">
            <% questions.forEach(function(question) { %>
                <a href="/questions/<%= question._id %>"
                    class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <%= question.text %>
                    <form action="/questions/delete/<%= question._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </a>
            <% }) %>
        </div>
    </div>

    <%- include('../partials/footer') %> <!-- Include footer.ejs -->
</body>
</html>