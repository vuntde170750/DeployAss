<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail question</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include('../partials/header', { user }) %>

        <div class="container mt-5">
            <h2>Question Detail</h2>
            <p><strong>Question Text:</strong>
                <%= question.text %>
            </p>
            <p><strong>Options:</strong></p>
            <ul class="list-group mb-3">
                <% question.options.forEach(function(option, index) { %>
                    <li class="list-group-item">
                        <%= option %>
                            <%= index===question.correctAnswerIndex ? '(Correct Answer)' : '' %>
                    </li>
                    <% }) %>
            </ul>
            <p><strong>Correct Answer Index:</strong>
                <%= question.correctAnswerIndex %>
            </p>

            <a href="/questions/edit/<%= question._id %>" class="btn btn-warning mt-3">Edit Question</a>
            <form action="/questions/delete/<%= question._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger mt-3">Delete Question</button>
            </form>
        </div>

        <%- include('../partials/footer') %>

</body>

</html>